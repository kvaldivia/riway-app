<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.kennyvaldivia.riway">

    <application
        android:name=".RiwayApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".alarm.AlarmListActivity"
            android:label="@string/title_alarm_list"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".alarm.AlarmDetailActivity"
            android:label="@string/title_alarm_detail"
            android:parentActivityName=".alarm.AlarmListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kennyvaldivia.riway.alarm.AlarmListActivity" />
        </activity>
        <activity android:name=".MyAlarmsActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme"
        />
    </application>

</manifest>